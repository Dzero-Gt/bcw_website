<% support = contentful.entry('1CBaUqVvYzf5cK1bcricjg')%>
<header class="support-header">
  <h1 class="title"><%= support.fields[:page_header] %></h1>
  <h3 class="support-description"><%= @renderer.render(support.content).html_safe %></h3>
  <h3 class="phone">Phone: <%= support.fields[:phone_number] %></h3>
  <h3 class="email">Email: <%= support.fields[:email] %></h3>

</header>

<div class="support-cards">
  <div class="residential-help section">
    <h2 class="support-section-header">Residential FAQ</h2>
    <% help = contentful.entries(content_type: 'helpArticle')%>
    <% help.each do |article| %>
      <div class="article-container">
        <div class="title-container">
          <h2 class="article-title"><%= article.fields[:faq_title]%></h2>
          <%= image_tag("chevron-up.png", :alt => "", class: "closed-arrow arrow") %>
        </div>
        <div class="support-content"><%= @renderer.render(article.faq_content).html_safe %></div>
      </div>
    <% end %>
    <div class="footer-bar"></div>
  </div>
  
  <div class="business-help section">
    <h2 class="support-section-header">Business FAQ</h2>
    <% helpB = contentful.entries(content_type: 'helpArticleBusiness')%>
    <% helpB.each do |article| %>
      <div class="article-container">
        <div class="title-container">
          <h2 class="article-title"><%= article.fields[:faq_title]%></h2>
          <%= image_tag("chevron-up.png", :alt => "", class: "closed-arrow arrow") %>
        </div>
        <div class="support-content"><%= @renderer.render(article.faq_content).html_safe %></div>
      </div>
    <% end %>
    <div class="footer-bar"></div>
  </div>
  
  <div class="local-resources section">
    <h2 class="support-section-header">Local Internet Resources</h2>
    <% localR = contentful.entries(content_type: 'localRecoursesInfo')%>
    <% localR.each do |article| %>
      <div class="article-container">
        <div class="title-container">
          <h2 class="article-title"><%= article.fields[:title]%></h2>
          <%= image_tag("chevron-up.png", :alt => "", class: "closed-arrow arrow") %>
        </div>
        <div class="support-content"><%= @renderer.render(article.content).html_safe%></div>
      </div>
    <% end %>
    <div class="footer-bar"></div>
  </div>
  
  <script>
    document.querySelectorAll('.title-container').forEach(item => {
      item.addEventListener('click', event => {
        item.classList.toggle('active-support');
      })
    });
  </script>
</div>