  <script>
    document.getElementById("calc").addEventListener("click", plan);
    var speed = 1;
    var multi = 1;
    var web = document.getElementById('web-browsing');
    var email = document.getElementById('email');
    var movie = document.getElementById('movie-streaming');
    var gaming = document.getElementById('gaming');
    var conferencing = document.getElementById('confrencing');
    var gamest = document.getElementById('game-streaming');
    var content = document.getElementById('content-creation');
    var people = document.getElementById('person-count');
    var mbps5 = document.getElementById('5mbps')
    var mbps10 = document.getElementById('10mbps')
    var mbps15 = document.getElementById('15mbps')
    var mbps50 = document.getElementById('50mbps')
    var mbps300 = document.getElementById('300mbps')
    

    function plan() {
      mbps5.classList.add('hidden');
      mbps10.classList.add('hidden');
      mbps15.classList.add('hidden');
      mbps50.classList.add('hidden');
      mbps300.classList.add('hidden');
      if (content.checked) {
        speed = 300;
      }
      else if (gamest.checked) {
        speed = 50;
      }
      else if (conferencing.checked) {
        speed = 30;
      }
      else if (gaming.checked) {
        speed = 30;
      }
      else if (movie.checked) {
        speed = 15;
      }
      else if (web.checked) {
        speed = 10;
      }
      else if (email.checked) {
        speed = 5;
      }
      multi = people.value;
      speed = speed * multi;
      if (speed < 10) {
        mbps5.classList.toggle('hidden');
      }
      else if (speed < 15) {
        mbps10.classList.toggle('hidden');
      }
      else if (speed < 50) {
        mbps15.classList.toggle('hidden');
      }
      else if (speed < 300) {
        mbps50.classList.toggle('hidden');
      }
      else {
        mbps300.classList.toggle('hidden');
      }
    }
  </script>
